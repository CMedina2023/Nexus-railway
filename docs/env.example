# ============================================================================
# CONFIGURACIÓN DE NEXUS AI - PLANTILLA
# ============================================================================
# Copia este archivo a .env y completa con tus valores reales
# NUNCA subas el archivo .env a GitHub

# ============================================================================
# Google Gemini AI (OBLIGATORIO)
# ============================================================================
GOOGLE_API_KEY=tu_google_api_key_aqui
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.2

# ============================================================================
# Base de Datos
# ============================================================================
# Desarrollo (SQLite)
DATABASE_URL=sqlite:///nexus_ai.db

# Producción (PostgreSQL en Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================================
# Flask y Seguridad
# ============================================================================
SECRET_KEY=genera_una_clave_aleatoria_de_minimo_32_caracteres
ENCRYPTION_KEY=genera_una_fernet_key_aqui
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ============================================================================
# Seguridad de Cookies (Producción)
# ============================================================================
SESSION_COOKIE_SECURE=False  # True en producción con HTTPS

# ============================================================================
# Jira (OPCIONAL)
# ============================================================================
JIRA_BASE_URL=https://tu-empresa.atlassian.net
JIRA_EMAIL=tu-email@empresa.com
JIRA_API_TOKEN=tu_jira_api_token_aqui

# ============================================================================
# Configuración de Archivos
# ============================================================================
UPLOAD_FOLDER=temp_uploads
MAX_UPLOAD_SIZE_MB=16

# ============================================================================
# Timeouts y Reintentos
# ============================================================================
MAX_RETRIES=3
RETRY_DELAY=2
GEMINI_TIMEOUT_BASE=180
GEMINI_TIMEOUT_INCREMENT=60

# ============================================================================
# Procesamiento de Documentos
# ============================================================================
STORY_MAX_CHUNK_SIZE=3000
MATRIX_MAX_CHUNK_SIZE=4000
LARGE_DOCUMENT_THRESHOLD=5000
STORY_BATCH_SIZE=5

# ============================================================================
# Jira - Configuración Avanzada
# ============================================================================
JIRA_TIMEOUT_SHORT=10
JIRA_TIMEOUT_LONG=15
JIRA_MAX_RESULTS=100
JIRA_PARALLEL_MAX_WORKERS=3
JIRA_METRICS_CACHE_TTL_HOURS=6

# ============================================================================
# Autenticación
# ============================================================================
BCRYPT_ROUNDS=12
SESSION_LIFETIME_HOURS=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_SECONDS=900

