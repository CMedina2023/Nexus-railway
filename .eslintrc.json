{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "max-lines": ["error", { "max": 400 }],
        "max-lines-per-function": ["warn", { "max": 50 }],
        "complexity": ["error", 10],
        "no-unused-vars": "warn",
        "no-console": "off"
    },
    "globals": {
        "bootstrap": "readonly",
        "showToast": "readonly",
        "generateStory": "readonly",
        "generateTestCase": "readonly"
    }
}
